{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "ES2020"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "verbatimModuleSyntax": true,


    "rootDir": "src/ts",
    "outDir": "public/js",

    "strict": true,

    "types": [],
    "skipLibCheck": true
  },
  "include": ["src/ts/**/*.ts"],
  "exclude": ["node_modules", "backend", "dist"]
}